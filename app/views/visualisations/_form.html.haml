= form_for @visualisation do |f|
  - if @visualisation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@visualisation.errors.count, "error")} prohibited this visualisation from being saved:"
      %ul
        - @visualisation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
